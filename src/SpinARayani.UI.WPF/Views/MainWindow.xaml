<ui:FluentWindow x:Class="SpinARayani.UI.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Spin a Rayani - Modern" Height="600" Width="1000"
        Background="{ui:ThemeResource ApplicationBackgroundBrush}">
    
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Stats -->
        <StackPanel Grid.Column="0">
            <ui:Card Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Guthaben" FontSize="12" Opacity="0.7"/>
                    <TextBlock Text="{Binding Stats.Money}" FontSize="20" FontWeight="Bold" Foreground="LightGreen"/>
                </StackPanel>
            </ui:Card>
            <ui:Card Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Gems" FontSize="12" Opacity="0.7"/>
                    <TextBlock Text="{Binding Stats.Gems}" FontSize="20" FontWeight="Bold" Foreground="SkyBlue"/>
                </StackPanel>
            </ui:Card>
            <ui:Card Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Rebirths" FontSize="12" Opacity="0.7"/>
                    <TextBlock Text="{Binding Stats.Rebirths}" FontSize="20" FontWeight="Bold" Foreground="Gold"/>
                </StackPanel>
            </ui:Card>
        </StackPanel>

        <!-- Center Panel: Action -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <ui:Button Content="SPIN" 
                       Command="{Binding RollCommand}"
                       FontSize="32" Padding="40,20"
                       Appearance="Primary"
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="Letzter Roll:" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding LastRoll}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Right Panel: Upgrades -->
        <StackPanel Grid.Column="2">
            <ui:Button Content="Rebirth" 
                       Command="{Binding RebirthCommand}"
                       HorizontalAlignment="Stretch"
                       Margin="0,0,0,10"/>
            <ui:Button Content="Shop" HorizontalAlignment="Stretch" Margin="0,0,0,10"/>
            <ui:Button Content="Inventory" HorizontalAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
